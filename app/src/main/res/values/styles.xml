<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Personnalisation de couleur -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Style pour les items de la barre de prédiction -->
    <style name="PredictionItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:background">@drawable/prediction_item_background</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <!-- (Optionnel) Style pour la barre elle-même si tu veux le réutiliser ailleurs -->
    <style name="PredictionBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@drawable/prediction_bar_background</item>
    </style>

</resources>
