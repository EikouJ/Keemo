<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:paddingTop="48dp"
        android:paddingBottom="48dp">

        <!-- Titre principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keemo"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="?android:attr/colorAccent"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Sous-titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuration rapide"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Étape 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Active le clavier dans les paramètres"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_enable_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activer Keemo"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:padding="12dp"/>

        <!-- Étape 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Sélectionne Keemo comme clavier par défaut"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_select_keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choisir Keemo"
            android:backgroundTint="?android:attr/colorAccent"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:padding="12dp"/>

        <!-- Étape 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Teste le clavier dans n’importe quel champ de texte !"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="?android:attr/textColorSecondary"
            android:gravity="center"
            android:layout_marginTop="12dp"/>

    </LinearLayout>
</ScrollView>
