<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- État pressé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#000080" />  <!-- Aqua marine pour l'état pressé -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#1E3A8A" />  <!-- Dark blue border -->
        </shape>
    </item>

    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E3A8A" />  <!-- Dark blue -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#000080" />  <!-- Aqua marine border -->
        </shape>
    </item>
</selector>